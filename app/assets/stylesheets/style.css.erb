
/*---------------*/
/*/Basic Setup/*/
/*-----------*/
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  background-color: #fff;
  color: #555;
  font-family: 'Lato', 'Arial', sans-serif;
  font-weight: 300;
  font-size: 20px;
  text-rendering: optimizeLegibility;
}

.clearfix {zoom: 1}
.clearfix:after {
  content: '.';
  clear: both;
  display: block;
  height: 0;
  visibility: hidden;
}

/*-----------------------*/
/*/reusable components/*/
/*-------------------*/

.row {
  max-width: 1140px;
  margin: 0, auto, 0, auto;
}

/*/navigation/*/
.main-nav {
  float: left;
  list-style: none;
  margin-top: 45px;
}

.main-nav li {
  display: inline-block;
  margin-right: 40px;
}

.main-nav li a:link,
.main-nav li a:visited {
  padding: 8px 0;
  color: aliceblue;
  text-decoration: none;
  text-transform: uppercase;
  font-size: 90%;
  border-bottom: 2px solid transparent;
  transition: border-bottom 0.4s;
  
}

.main-nav li a:hover,
.main-nav li a:active {
  border-bottom: 2px solid #a04000;
  
}

/*/headings/*/
h1,
h2,
h3 {
  font-weight: 300;
  text-transform: uppercase;
}

h1 {
  margin: 0;
  margin-bottom: 20px;
  color: #fff;
  font-size: 200%;
  word-spacing: 4px;
  letter-spacing: 1px;

}

h2 {
  font-size: 150%;
  word-spacing: 2px;
  text-align: center;
  margin-bottom: 30px;
  letter-spacing: 1px;

}

h3 {
  font-size: 100%;
}
/*line separating h2 from content */
h2:after {
  display: block;
  height: 2px;
  background-color: #d35400;
  content: " ";
  width: 100px;
  margin: 0 auto;
  margin-top: 30px;
}

header {
  background-image: linear-gradient(rgba(0, 0, 0, 0.7),rgba(0, 0, 0, 0.7)), url(<%=asset_path 'mezzo_dock.jpg' %>);
  height: 100vh;
  background-size: cover;
  background-position: center;
}

.dock-text-box {
  position: absolute;
  width: 1140px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.logo {
  height: 100px;
  width: auto;
  float: right;
  margin-top: 20px;
  border-radius: 20%;
}

/*/Sections/*/
section {
  padding: 80px;
} 
.long-copy {
  line-height: 145%;
  width: 70%;
  margin-left: 15%;
}
.box {
  padding: 3%;
  text-align: center;
}

.box p {
  font-size: 60%;
  line-height: 145%;
}
/*channels*/
.section-channels {
  padding: 0;
}
.channel-showcase {
  list-style: none;
  width: 100%;
}

.channel-showcase li {
  display: block;
  float:  left;
  width: 25%;
}

.channel-photo {
  width: 100%;
  margin: 0;
  overflow: hidden;
  background-color: #585555;
}

.channel-photo img {
  opacity: 0.7;
  width: 96%;
  height: auto;
  transform: scale(1.25);
  transition: transform 0.5s, opacity 0.5s;
}

.channel-photo img:hover {
  opacity: 1;
  transform: scale(1.15);
}

/*-----------*/
/*/Buttons/*/
/*-------*/


.btn:link,
.btn:visited {
  display: inline-block;
  padding:  10px 30px;
  font-weight: 300;
  text-decoration: none;
  border: 1px solid #d35400;
  border-radius: 200px;
  transition: background-color 0.3s, border 0.3s, color 0.3s;
  margin-top: 10px;
}

.btn-full:link,
.btn-full:visited {
  color: #fff;
  background-color: #d35400;
  margin-right: 15px;
  
}

.btn-ghost:link,
.btn-ghost:visited {
color: #d35400;

}

.btn:hover,
.btn:active {
  background-color: #a04000;
}

.btn-full:hover,
.btn-full:active {
  border: 1px solid #a04000;
}

.btn-ghost:hover,
.btn-ghost:active {
  border: 1px solid #a04000;
  color: #fff;
}

/*/ICONS/*/
.icon-big {
  font-size: 350%;
  display: block;
  color: #d35400;
  margin-bottom: 10px;
}


/*/How it works/*/

.steps-box:first-child {
  text-align: right;
  padding-right: 3%;
  
}
.steps-box:last-child {
  padding-left: 3%;
  margin-top: 70px;  
}

.how-it-works {
  width: 70%;
}

.works-step {
  margin-bottom: 50px;
}
.works-step div {
  color: #d35400;
  border: 2px solid #d35400;
  display: inline-block;
  border-radius: 50%;
  height: 50px;  
  width: 50px;
  text-align: center;
  padding: 5px;
  float: left;
  font-size: 150%;
  margin-right: 25px;
}

.section-steps {
  background-color: #f8f7f6;
}
